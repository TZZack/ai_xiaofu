/**index.wxss**/

.container {
  height: 100%;
  width: 100%;
  background-color: #fff;
}

.header {
  font-family: PingFang SC;
  height: 100rpx;
  width: 100vw;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.header-search {
    flex: 1;
}
.header-date {
    flex: 0 0 160rpx;
    margin-left: 20rpx;
}

.content {
  height: calc(100% - 130rpx);
  padding: 20rpx 30rpx 0;
  box-sizing: border-box;
}

.article-item:not(:first-child) {
    margin-top: 36rpx;
}

.article-type {
    line-height: 80rpx;
    /* border: 1px solid #ffd8d2; */
    background-color: #ffd9c2;
    display: flex;
    justify-content: center;
    border-radius: 20rpx;
    font-weight: 600;
}

.article-title {                                             
    color: #0052D9;
    font-size: 36rpx;
    line-height: 50rpx;
    word-wrap: break-word;
}
.article-date {
    font-size: 32rpx;
    line-height: 60rpx;
    color: #a6a6a6;
}
.article-labels {
    display: flex;
    flex-wrap: wrap;
}
.label-item {
    margin-right: 8rpx;
    margin-top: 8rpx;
}

.article-summary {
    text-indent: 34rpx;
    margin-top: 16rpx;
    font-size: 32rpx;
    line-height: 44rpx;
}